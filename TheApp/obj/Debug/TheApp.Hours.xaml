<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="TheApp.Hours"
			 Title="Hours">
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Opening Hours" FontSize="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
			<Label FontSize="15" HorizontalOptions="Center" Text="Monday - Friday: 10am ~ 11pm" />
			<Label FontSize="15" HorizontalOptions="Center" Text="Saturday: 9am ~ 11pm" />
			<Label FontSize="15" HorizontalOptions="Center" Text="Sunday: 9am ~ 9pm" />

			<Button Text="Back" Clicked="BackButtonClicked" VerticalOptions="CenterAndExpand" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
